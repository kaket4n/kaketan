.container
  - @picks.each do |pick|
    div.pick
      .row
        .col-md-4
          = link_to admin_pick_path(pick) do
            = image_tag(pick.img_url, class: "img-responsive")
        .col-md-8
          p.title.mgbt-20
            = link_to pick.title, admin_pick_path(pick)
          p.content
            = truncate(pick.description, length: 100)
          p.created_at.text-right
            = pick.created_at.strftime("%Y-%m-%d %H:%M:%S")
